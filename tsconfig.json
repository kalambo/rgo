{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "",
    "outDir": "lib",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "downlevelIteration": true
  },
  "include": ["src/**/*", "test/**/*"]
}
